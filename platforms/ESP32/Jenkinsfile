pipeline {
    agent none

    parameters {
        string(
            name: 'BRANCH_NAME',
            defaultValue: 'main',
            description: 'Git branch to build (e.g., main, develop, feature/xxx)'
        )
        booleanParam(
            name: 'TRIGGER_TEST',
            defaultValue: true,
            description: 'Trigger test pipeline after build completes'
        )
        string(
            name: 'TAG_PREFIX',
            defaultValue: 'esp32-fw',
            description: 'Prefix for firmware tag (e.g., esp32-fw, v, release)'
        )
    }

    environment {
        PLATFORM = "ESP32"
        FW_ARTIFACT = "firmware-esp32.bin"
    }

    stages {

        stage('Checkout Source') {
            agent { label 'fw-build' }   // üö® Xeon build agent
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: "*/${params.BRANCH_NAME}"]],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [],
                    submoduleCfg: [],
                    userRemoteConfigs: scm.userRemoteConfigs
                ])
            }
        }

        stage('Build ESP32 Firmware (Xeon)') {
            agent { label 'fw-build' }   // üö® build ONLY here
            steps {
                sh '''
                    export ESPRESSIF_HOME=/home/jenkins/.espressif
                    . /opt/esp/idf/export.sh
                    idf.py set-target esp32
                    idf.py build
                    cp build/*.bin ${FW_ARTIFACT}
                '''
            }
        }

        stage('Archive Firmware Artifact (Xeon)') {
            agent { label 'fw-build' }
            steps {
                archiveArtifacts artifacts: "${FW_ARTIFACT}", fingerprint: true
            }
        }

        stage('Generate ATS Manifest (Xeon)') {
            agent { label 'fw-build' }
            steps {
                sh '''
                    SHA256=$(sha256sum ${FW_ARTIFACT} | awk '{print $1}')

                    cat <<EOF > ats-manifest.yaml
manifest_version: 1

build:
  ci_system: jenkins
  job_name: ${JOB_NAME}
  build_number: ${BUILD_NUMBER}
  git:
    repo: ${GIT_URL}
    commit: ${GIT_COMMIT}
    branch: ${GIT_BRANCH}
  artifact:
    name: ${FW_ARTIFACT}
    checksum: sha256:${SHA256}
    build_node: xeon-fw-build

device:
  target: esp32
  board: esp32-devkit

test_plan:
  - gpio_toggle_test
  - oled_display_test

timestamps:
  build_time: "$(date -u +%Y-%m-%dT%H:%M:%SZ)"
EOF
                '''
                archiveArtifacts artifacts: 'ats-manifest.yaml'
            }
        }

        stage('Tag Firmware') {
            agent { label 'fw-build' }
            steps {
                script {
                    def tagName = "${params.TAG_PREFIX}-${env.BUILD_NUMBER}-${env.GIT_COMMIT.take(7)}"
                    def tagMessage = "Firmware build #${env.BUILD_NUMBER} from ${env.GIT_BRANCH}"
                    
                    try {
                        sh """
                            git config user.name "Jenkins"
                            git config user.email "jenkins@ats-ci"
                            git tag -a ${tagName} -m "${tagMessage}" || echo "Tag already exists"
                        """
                        echo "‚úÖ Tagged firmware locally: ${tagName}"
                        echo "   Firmware version: ${tagName}"
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è  Failed to create tag: ${e.getMessage()}"
                        echo "   This is not critical - build succeeded, artifact is available"
                    }
                }
            }
        }

        stage('Trigger Test Pipeline') {
            when {
                expression { params.TRIGGER_TEST == true }
            }
            steps {
                script {
                    // Test job naming: {folder}/{base-job}-{platform}-test
                    // e.g., platforms/ESP32/ats-fw-esp32-demo-ESP32-test
                    def testJobName = "${env.JOB_NAME}-${env.PLATFORM}-test"
                    echo "üöÄ Triggering test pipeline: ${testJobName}"
                    echo "   Build #${env.BUILD_NUMBER} ‚Üí Test pipeline (async, not waiting for result)"
                    
                    try {
                        // Trigger test pipeline asynchronously, don't wait for result
                        def testBuild = build job: testJobName, 
                            parameters: [
                                string(name: 'BUILD_JOB_NAME', value: env.JOB_NAME),
                                string(name: 'BUILD_NUMBER', value: env.BUILD_NUMBER.toString()),
                                string(name: 'FW_ARTIFACT', value: env.FW_ARTIFACT),
                                string(name: 'PLATFORM', value: env.PLATFORM)
                            ],
                            wait: false,
                            propagate: false,
                            quietPeriod: 0
                        
                        // Safely check if build object exists
                        if (testBuild != null && testBuild.number != null) {
                            echo "‚úÖ Test pipeline triggered: ${testJobName} #${testBuild.number}"
                        } else {
                            echo "‚úÖ Test pipeline scheduled: ${testJobName}"
                            echo "   Check Jenkins UI for test results"
                        }
                    } catch (Exception e) {
                        // Don't fail build pipeline if test trigger fails
                        echo "‚ö†Ô∏è  Could not trigger test pipeline: ${e.getMessage()}"
                        echo "   Build succeeded - firmware artifact available"
                        echo "   Test can be triggered manually from Jenkins UI"
                        // Continue pipeline execution
                    }
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Firmware built and tagged successfully"
        }
        failure {
            echo "‚ùå Firmware build failed"
        }
        always {
            node('fw-build') {
                archiveArtifacts artifacts: 'ats-manifest.yaml', allowEmptyArchive: true
            }
        }
    }
}
